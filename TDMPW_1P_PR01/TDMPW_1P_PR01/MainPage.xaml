<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_1P_PR01.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="celsius.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Celsius Image" />

            <Label
                Text="Conversion de grados Celsius a Fahrenheit"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Ingresa los grados"/>

            <Entry
                x:Name="entradaDatos"/>

            <HorizontalStackLayout>
                <Button
                    x:Name="btnCelsius"
                    Text="Celsius"
                    Clicked="ClickedCelsius"/>
                <Button
                    x:Name="btnFarenheit"
                    Text="Fahrenheit"
                    Clicked="ClickedFarenheit"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    x:Name="lblResultadoCelsius"/>
                <Label
                    x:Name="lblResultadoFarenheit"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
